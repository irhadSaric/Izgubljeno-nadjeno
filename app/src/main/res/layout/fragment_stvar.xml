<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/stvar_slika"
                android:scaleType="centerInside"
                android:cropToPadding="true"
                android:background="@color/colorPrimaryDark"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stvar_kamera"
                android:background="@android:drawable/ic_menu_camera"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stvar_naslov"/>

            <EditText
                android:id="@+id/naziv_stvari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/stvar_hint"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stvar_detalji_pronalaska"/>
    <Button
        android:id="@+id/datum_pronalaska"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lokacija_pronalaska"
        android:text="@string/stvar_lokacija"
        android:hint="Unesite lokaciju pronalaska/gubljenja stvari"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kontakt"
            android:text="@string/stvar_kontakt_korisnika"
            android:hint="Kontakt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pozovi"
            android:text="Pozovi"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stvar_lokacija"
        android:id="@+id/lokacija_korisnika"
        android:hint="VaÅ¡a lokacija"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stvar_ime_korisnika"
        android:id="@+id/ime_korisnika"
        android:hint="Ime i prezime"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Izgubljeno"
        android:id="@+id/izgubljeno_radio"/>

</LinearLayout>